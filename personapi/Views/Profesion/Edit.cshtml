@model personapi_dotnet.Models.Entities.Profesion

<h2>Editar Profesión</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <textarea asp-for="Des" class="form-control"></textarea>
        <span asp-validation-for="Des" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/Profesion" class="btn btn-secondary">Cancelar</a>
</form>
