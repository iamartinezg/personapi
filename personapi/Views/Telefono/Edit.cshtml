@model personapi_dotnet.Models.Entities.Telefono

<h2>Editar Teléfono</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Num" />
    <div class="form-group">
        <label>Operador</label>
        <input asp-for="Oper" class="form-control" />
        <span asp-validation-for="Oper" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Dueño (CC)</label>
        <input asp-for="Duenio" class="form-control" />
        <span asp-validation-for="Duenio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/Telefono" class="btn btn-secondary">Cancelar</a>
</form>