@model personapi_dotnet.Models.Entities.Persona

<h2>Crear Persona</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>CC</label>
        <input asp-for="Cc" class="form-control" />
        <span asp-validation-for="Cc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Apellido</label>
        <input asp-for="Apellido" class="form-control" />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Género</label>
        <input asp-for="Genero" class="form-control" />
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Edad</label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a href="/Persona" class="btn btn-secondary">Cancelar</a>
</form>